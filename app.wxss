/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.level {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.no-more {
  width: 100vw;
  text-align: center;
  color: #ADB4BE;
  font-size: 26rpx;
  height: 100rpx;
  line-height: 100rpx;
}

/* loading start */
.shadow {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.6);
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

@keyframes roro {
  from {
    transform: rotate(0deg)
  }

  to {
    transform: rotate(360deg)
  }
}

.roro {
  animation: roro 1s linear infinite;
  width: 50rpx;
  height: 50rpx;
}

/* loading end */


/* 分享弹框 start */
.action {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 25rpx 25rpx 0 0;
  padding: 20rpx 0 30rpx;
  display: flex;
  justify-content: space-around;
}

.action .button {
  padding: 30rpx;
  border-bottom: 2rpx solid #D59C6C;
  background-color: #fff;
}

/* 分享弹框 end */