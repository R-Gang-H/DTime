page {
  background-color: #F7F7F9;
}

.reportContainer {
  display: flex;
  flex-flow: column;
}

.vLine {
  width: 100%;
  background-color: #e0e0e0;
  height: 1rpx;
}

.waitContainer {
  display: flex;
  flex-flow: column;
  margin-top: 38rpx;
}

.title {
  font-size: 32rpx;
  color: #212832;
  font-weight: bold;
  margin-bottom: 24rpx;
  margin-left: 32rpx;
}

.userContainer {
  display: flex;
  flex-flow: column;
  background-color: white;
  width: 686rpx;
  height: 164rpx;
  border-radius: 16rpx;
  align-self: center;
  line-height: 70rpx;
}

.name {
  margin-left: 24rpx;
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #212832;
  font-weight: bold;
}

.infoContainer {
  display: flex;
  flex-flow: row;
  margin-top: 12rpx;
  margin-left: 24rpx;
  height: 64rpx;
}

.sex {
  font-size: 28rpx;
  color: #858C96;
  align-self: center;
  margin-right: 24rpx;
}

.look {
  width: 200rpx;
  height: 64rpx;
  background: #F6F6F8;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #858C96;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 220rpx;
  position: absolute;
}

.bigdata {
  width: 200rpx;
  height: 64rpx;
  background: linear-gradient(90deg, #6FE7F4 0%, #4ADCF7 100%);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 56rpx;
  position: absolute;
}

.listContainer {
  margin-top: 60rpx;
}

.scrollContainer{
  margin-bottom: 160rpx;
}

.list {
  align-self: center;
}

.listItem {
  display: flex;
  flex-flow: column;
  background-color: white;
  width: 686rpx;
  height: 164rpx;
  border-radius: 16rpx;
  align-self: center;
  margin-bottom: 24rpx;
}

.noMore {
  font-size: 26rpx;
  color: #858C96;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  align-self: center;
}

.finishContainer {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 160rpx;
  background-color: white;
  display: flex;
  flex-flow: column;
}

.finish {
  font-size: 34rpx;
  color: white;
  display: flex;
  align-self: center;
  align-items: center;
  justify-content: center;
  background: linear-gradient(90deg, #6FE7F4 0%, #4ADCF7 100%);
  width: 670rpx;
  height: 92rpx;
  border-radius: 46rpx;
  margin-top: 34rpx;
  box-shadow: 0rpx 4rpx 16rpx 0rpx #A2F1FF;
}