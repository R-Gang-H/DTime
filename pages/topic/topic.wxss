}

/* 选中后的 对勾样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 20%;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  width: 40rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx;
  /* 对勾大小 34rpx */
  font-size: 38rpx;
  /* 对勾颜色 白色 */
  color: #FFFFFF;
  background: #63CEE4;
  transform: translate(-50%, -50%) scale(1);
