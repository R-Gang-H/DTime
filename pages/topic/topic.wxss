  color: rgba(255, 255, 255, 1);
}

radio .wx-radio-input,
checkbox .wx-checkbox-input {
  flex: none;
}

/* 未选中的 背景样式 */
radio .wx-radio-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: #E0E0E2 3rpx solid !important;
}

/* 选中后的 背景样式  */
radio .wx-radio-input.wx-radio-input-checked {
  border: #63CEE4 3rpx solid !important;
}

/* 选中后的 对勾样式  */
radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  width: 40rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx;
  /* 对勾大小 34rpx */
  font-size: 38rpx;
  /* 对勾颜色 白色 */
  color: #FFFFFF;
  background: #63CEE4;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);

}


/* 未选中的 背景样式 */
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20%;
  border: #E0E0E2 3rpx solid !important;
}

/* 选中后的 背景样式  */
