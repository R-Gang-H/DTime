page{
  background-color: #f7f7f9;
}

.container{
  display: flex;
  flex-flow: column;
}

.detailTypeContainer{
  display: flex;
  flex-flow: row;
  position: fixed;
  border-top: #e0e0e0 1rpx solid;
  width: 100%;
  height: 96rpx;
  background-color: white;
  z-index: 999;
}

.detailType{
  font-size: 28rpx;
  color: #858C96;
  margin-left: 32rpx;
  align-self: center;
}

.reward{
  position: absolute;
  right: 32rpx;
  font-size: 28rpx;
  color: #858C96;
  align-self: center;
  display: flex;
}

.listContainer{
  width: 100%;
  margin-top: 120rpx;
  background-color: white;
}

.itemContainer{
  display: flex;
  flex-flow: column;
  height: 146rpx;
}

.vLine{
  background-color: #e0e0e0;
  width: 702rpx;
  align-self: center;
  height: 1rpx;
}

.detailContainer{
  display: flex;
  flex-flow: row;
  height: 145rpx;
}

.head{
  width: 76rpx;
  height: 76rpx;
  border-radius: 38rpx;
  align-self: center;
  margin-left: 26rpx;
}

.detailInfo{
  display: flex;
  flex-flow: column;
  margin-left: 18rpx;
  align-self: center;
}

.userInfo{
  display: flex;
  flex-flow: row;
}

.nickname{
  font-size: 28rpx;
  color: #212832;
}

.type{
  font-size: 24rpx;
  color: #ADB4BE;
  background-color:#F7F7F9;
  padding: 5rpx 10rpx;
}

.detail{
  width: 320rpx;
  font-size: 26rpx;
  color: #ADB4BE;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-top: 5rpx;
}

.incomeContainer{
  display: flex;
  flex-flow: column;
  position: absolute;
  right: 26rpx;
  align-self: center;
}

.income{
  font-size: 34rpx;
  color: #FA283B;
  text-align: right;
}

.time{
  font-size: 26rpx;
  color: #ADB4BE;
  text-align: right;
}

.noMore {
  font-size: 26rpx;
  color: #858C96;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}