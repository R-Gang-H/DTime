/* pages/mycourse/mycourse.wxss */
page {
  background: #F7F7F9;
}

.hotCourses {
  margin-top: 22rpx;
}

/* 课程 */
.course {
  padding: 24rpx;
  background-color: white;
  display: flex;
}

.course-banner {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #FFC947;
  margin-right: 24rpx;
}

.course-intro {
  width: 480rpx;
  margin-top: 22rpx;
}

.course-name {
  color: #212832;
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 4rpx;
}

.course-subname {
  color: #ADB4BE;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.qu {
  border-radius: 16px;
  font-size: 14px;
  padding: 8rpx 60rpx;
  margin-left: 30rpx;
}

.qufk {
  color: #FFFFFF;
  background: linear-gradient(90deg, #6FE7F4 0%, #4ADCF7 100%);
}

.qupj {
  color: #858C96;
  background: #F6F6F8;
}