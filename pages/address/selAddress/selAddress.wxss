/* pages/Address/Address.wxss */
page {
  background: #F7F7F9;
}

.box1 {
  width: 85%;
  background: #FFFFFF;
  box-shadow: 0px 4px 6px 0px #F6F6FA;
  border-radius: 16rpx;
  margin: 32rpx auto;
  padding: 32rpx;
}

.yjname {
  color: #212832;
  font-size: 34rpx;
  font-weight: 500;
}

.phone {
  margin-left: 24rpx;
  color: #ADB4BE;
}

.dzaddress {
  display: flex;
  margin-top: 6rpx;
}

.address_txt {
  font-size: 28rpx;
  color: #858C96;
  width: 100%;
}

.addImg {
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx 20rpx;
}

.box3 {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, 1);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
}

.next {
  width: 85%;
  height: 95rpx;
  background: linear-gradient(90deg, #6FE7F4 0%, #4ADCF7 100%);
  box-shadow: 0rpx 4rpx 16rpx 0rpx #A2F1FF;
  border-radius: 46rpx;
  align-self: center;
  margin-top: 20rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  color: #FFF;
  box-sizing: border-box;
}