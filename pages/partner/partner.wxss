/* pages/partner/partner.wxss */
page {
  background-color: #F7F7F9;
}

.content {
  background-color: #F7F7F9;
  padding-top: 120rpx;
  padding-bottom: 132rpx;
  display: flex;
  flex-flow: column;
}

.item {
  margin: 0 32rpx 24rpx 32rpx;
  padding: 24rpx;
  background-color: white;
  border-radius: 16rpx;
}

.header {
  background-color: white;
  height: 96rpx;
  margin-bottom: 24rpx;
  width: 100vw;
  position: fixed;
}

.header-term {
  height: 96rpx;
  line-height: 96rpx;
  padding-left: 12rpx;
}

.term {
  color: #858C96;
  font-size: 28rpx;
  padding: 0 20rpx;
  text-align: center;
}

.sterm {
  color: #212832;
  font-size: 38rpx;
  padding: 0 20rpx;
  text-align: center;
}

.br {
  width: 40rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #63CEE4;
  position: absolute;
  top: 76rpx;
}

/* tips */

.tips {
  height: 80rpx;
  width: 686rpx;
  background-color: white;
  border-radius: 16rpx;
  margin-left: 32rpx;
  margin-bottom: 24rpx;
}

.tips-image {
  width: 32rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 24rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #ADB4BE;
}

/* top课程产品 */
.course-banner-big {
  width: 638rpx;
  height: 300rpx;
  background-color: #FFC947;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.course-intro {
  width: 466rpx;
}

.course-name-big {
  font-size: 34rpx;
  color: #212832;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.course-subname-big {
  font-size: 28rpx;
  color: #858C96;
  margin-bottom: 22rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.course-price-big {
  font-size: 34rpx;
  color: #FA283B;
  font-weight: bold;
}

.course-lineprice-big {
  font-size: 26rpx;
  color: #E0E0E2;
  margin-left: 18rpx;
}

.course-count {
  font-size: 26rpx;
  color: #ADB4BE;
  margin: 0 auto;
  margin-right: 0;
}


.team-read {
  height: 64rpx;
  line-height: 64rpx;
  background: -moz-linear-gradient(top, rgb(111, 231, 244), rgb(74, 220, 247));
  background: -ms-linear-gradient(top, rgb(111, 231, 244), rgb(74, 220, 247));
  background: -o-linear-gradient(top, rgb(111, 231, 244), rgb(74, 220, 247));
  background: -webkit-linear-gradient(top, rgb(111, 231, 244), rgb(74, 220, 247));
  color: white;
  font-size: 28rpx;
  padding: 0 28rpx;
  border-radius: 32rpx;
  margin: 0 auto;
  margin-right: 0;
  box-shadow: 0 8rpx 8rpx 0 #A2F1FF;
}

/* 课程 */
.course {
  padding: 24rpx;
  background-color: white;
}

.course-banner {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #FFC947;
  margin-right: 24rpx;
}

.course-intro {
  width: 480rpx;
}

.course-name {
  color: #212832;
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 4rpx;
}

.course-subname {
  color: #ADB4BE;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.course-tags {
  margin-top: 14rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
  height: 120rpx;
  line-height: 45rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.course-tag {
  color: #ADB4BE;
  font-size: 24rpx;
  background-color: #F7F7F9;
  padding: 6rpx 14rpx;
  margin-right: 16rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  display: inline-grid;
}

.course-price {
  color: #FA283B;
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 18rpx;
}

.course-lineprice {
  color: #E0E0E2;
  font-size: 26rpx;
  text-decoration: line-through;
}

.course-count {
  color: #ADB4BE;
  font-size: 24rpx;
  margin: 0 auto;
  margin-right: 0;
}

.noMore {
  font-size: 26rpx;
  color: #858C96;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  align-self: center;
}

.shaixuan-content {
  margin: 0 auto;
  margin-right: 32rpx;
}

.shaixuan {
  width: 30rpx;
  height: 30rpx;
  margin-right: 18rpx;
}

.shanxuan-title {
  color: #858C96;
  font-size: 28rpx;
}

/* 搜索 */
.nav {
  background-color: white;
  width: 100%;
  z-index: 10;
  justify-content: center;
  display: flex;
}

.search {
  width: 90%;
  background-color: #F7F7F9;
  border: 1rpx solid #EAEAEA;
  border-radius: 10rpx;
  margin: 20rpx 0;
}

.search-glass {
  width: 32rpx;
  height: 32rpx;
  margin-left: 28rpx;
}

.search-text {
  color: #ADB4BE;
  font-size: 26rpx;
  margin-left: 26rpx;
  width: 100%;
  padding: 20rpx 0;
}